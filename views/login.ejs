<body class="text-center">
    <div class="container mt-5" style="width: 500px;">
        <main class="form-signin">
            <form id='auth' action="/login" method="POST">
                <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
                <div class="form-floating">
                    <input type="password" name="password" class="form-control" id="floatingPassword"
                        placeholder="Password">
                    <label for="floatingPassword">Password</label>
                </div>
                <button class="w-100 btn btn-lg btn-primary" id="submit" type="submit">Sign in</button>
            </form>
        </main>

    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/js-sha256/0.9.0/sha256.min.js"
        integrity="sha512-szJ5FSo9hEmXXe7b5AUVtn/WnL8a5VofnFeYC2i2z03uS2LhAch7ewNLbl5flsEmTTimMN0enBZg/3sQ+YOSzQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script>

        document.getElementById("floatingPassword").addEventListener("change", function (event) {

            const password = document.getElementById('floatingPassword').value
            var hash = sha256.create();
            hash.update(password);
            document.getElementById('floatingPassword').value = hash.hex();

        });

    </script>

